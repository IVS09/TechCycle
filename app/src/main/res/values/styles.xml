<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema base -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/secondaryColor</item>
        <item name="colorAccent">@color/primaryColor</item>
    </style>

    <!-- Estilo de chips reutilizable -->
    <style name="ChipStyle">
        <item name="android:background">@drawable/chip_background</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">@color/milk</item>
    </style>

</resources>