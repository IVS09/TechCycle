<resources>
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <!-- Borde redondeado -->
        <item name="shapeAppearance">@style/CustomButtonShape</item>
        <!-- Fondo blanco -->
        <item name="backgroundTint">@color/white</item>
        <!-- Color de texto -->
        <item name="android:textColor">@color/black</item>
        <!-- Borde gris -->
        <item name="android:strokeColor">@color/gray</item>
        <!-- Padding para que se vea mejor -->
        <item name="android:padding">8dp</item>
    </style>

    <!-- Definir la forma de los bordes redondeados -->
    <style name="CustomButtonShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">12dp</item>
    </style>
</resources>
