<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Campo de Localización -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="8dp">

                <ImageView
                    android:id="@+id/locationIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/category_location_icon"
                    android:contentDescription="@string/location_icon_home" />

                <EditText
                    android:id="@+id/locationText"
                    android:layout_width="310dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:hint="@string/editText_location_home"
                    android:background="@android:color/transparent"
                    android:imeOptions="actionNone"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/searchHintColor"
                    android:importantForAutofill="yes"
                    android:autofillHints="location"
                    android:paddingVertical="12dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Campo de Búsqueda -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="8dp">

                <ImageView
                    android:id="@+id/searchIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/category_search_icon"
                    android:contentDescription="@string/search_icon_home" />

                <EditText
                    android:id="@+id/searchBar"
                    android:layout_width="310dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:hint="@string/editText_search_home"
                    android:background="@android:color/transparent"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/searchHintColor"
                    android:importantForAutofill="yes"
                    android:autofillHints="search"
                    android:paddingVertical="12dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- RecyclerView para Categorías -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textView_category_home"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/categoryRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="3"
            tools:listitem="@layout/item_category_start" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>












